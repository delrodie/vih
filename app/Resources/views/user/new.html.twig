{% extends 'layout.html.twig' %}

{% block body %}
    <h1>User creation</h1>


    <ul>
        <li>
            <a href="{{ path('admin_user_index') }}">Back to the list</a>
        </li>
    </ul>
    <div class="pages">
        <div data-page="projects" class="page no-toolbar no-navbar">
            <div class="page-content">

                <div class="navbarpages">
                    <div class="nav_left_logo"><a href="#" data-panel="left" class="open-panel"><img src="{{ absolute_url(asset('ressources/images/logo-02.png')) }}" alt="" title="" /></a></div>
                    <div class="nav_right_button">
                        <a href="#" data-panel="left" class="open-panel"><img src="{{ absolute_url(asset('ressources/images/icons/white/menu.png')) }}" alt="" title="" /></a>
                        <a href="{{ path('admin_user_index') }}"><img src="{{ asset('ressources/images/icons/white/back.png') }}" alt="" title="" /></a>
                    </div>
                </div>
                <div id="pages_maincontent">

                    <h2 class="page_title">Enregistrement d'utilisateur</h2>

                    <div class="page_content">

                        <div class="contactform" id="contactForm">
                            {{ form_start(form) }}
                            <label>Nom utilisateur : </label>
                            {{ form_widget(form.username) }}

                            <label>Adresse email : </label>
                            {{ form_widget(form.email) }}

                            <label>Mot de passe : </label>
                            {{ form_widget(form.password) }}

                            <label>Roles:</label>
                            <div id="appbundle_user_roles">
                                <label class="label-checkbox item-content">
                                    <input type="checkbox" id="appbundle_user_roles_0" name="appbundle_user[roles][]" value="ROLE_USER" checked="checked" />
                                    <div class="item-media">
                                        <i class="icon icon-form-checkbox"></i>
                                    </div>
                                    <div class="item-inner">
                                        <div class="item-title">UTILISATEUR</div>
                                    </div>
                                </label>
                                <label class="label-checkbox item-content">
                                    <input type="checkbox" id="appbundle_user_roles_1" name="appbundle_user[roles][]" value="ROLE_CALL" />
                                    <div class="item-media">
                                        <i class="icon icon-form-checkbox"></i>
                                    </div>
                                    <div class="item-inner">
                                        <div class="item-title">CALL CENTER</div>
                                    </div>
                                </label>
                                <label class="label-checkbox item-content">
                                    <input type="checkbox" id="appbundle_user_roles_2" name="appbundle_user[roles][]" value="ROLE_SUP" />
                                    <div class="item-media">
                                        <i class="icon icon-form-checkbox"></i>
                                    </div>
                                    <div class="item-inner">
                                        <div class="item-title">SUPERVISEUR</div>
                                    </div>
                                </label>
                                <label class="label-checkbox item-content">
                                    <input type="checkbox" id="appbundle_user_roles_3" name="appbundle_user[roles][]" value="ROLE_ADMIN" />
                                    <div class="item-media">
                                        <i class="icon icon-form-checkbox"></i>
                                    </div>
                                    <div class="item-inner">
                                        <div class="item-title">ADMINISTRATEUR</div>
                                    </div>
                                </label>
                            </div>

                            <label>Statut : </label>
                            <label class="label-checkbox item-content">
                                {{ form_widget(form.enabled) }}
                                <div class="item-media">
                                    <i class="icon icon-form-checkbox"></i>
                                </div>
                                <div class="item-inner">
                                    <div class="item-title">activ√©</div>
                                </div>
                            </label>
                            <input type="submit" name="submit" class="form_submit"   value="Envoyer" />
                            {{ form_end(form) }}
                        </div>



                    </div>

                </div>


            </div>
        </div>
    </div>
{% endblock %}
