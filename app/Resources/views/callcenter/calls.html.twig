{% extends 'layout.html.twig' %}

{% block body %}
	<div class="pages">
		<div data-page="projects" class="page no-toolbar no-navbar">
			<div class="page-content">

				<div class="navbarpages">
					<div class="nav_left_logo"><a href="#" data-panel="left" class="open-panel"><img src="{{ absolute_url(asset('ressources/images/logo-02.png')) }}" alt="" title="" /></a></div>
					<div class="nav_right_button">
						<a href="#" data-panel="left" class="open-panel"><img src="{{ absolute_url(asset('ressources/images/icons/white/menu.png')) }}" alt="" title="" /></a>
						<a href="{{ path('callcenter_index') }}"><img src="{{ asset('ressources/images/icons/white/back.png') }}" alt="" title="" /></a>
					</div>
				</div>
				<div id="pages_maincontent">

					<h2 class="page_title">Liste des appels du {{ date|date('d-m-Y') }}</h2>

					<div class="page_content">


						<ul class="responsive_table">
							<li class="table_row">
								<div class="table_section_small">N°</div>
								<div class="table_section">Numeros</div>
								<div class="table_section">Problèmes</div>
							</li>
							{% for call in calls %}
								<li class="table_row">
									<div class="table_section_small">{{ loop.index }}</div>
									<div class="table_section">
										<a href="{{ path('callcenter_show', {'slug': call.slug}) }}">{{ call.numero }}</a>
										<span style="font-size: 0.8em; font-weight: bold; color: #0303ab;">({{ call.position }})</span>
									</div>
									<div class="table_section">
										{{ call.preoccupation|raw }}
									</div>
								</li>
							{% endfor %}
						</ul>



					</div>

				</div>


			</div>
		</div>
	</div>
{% endblock %}
