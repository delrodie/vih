{% extends 'layout.html.twig' %}

{% block body %}
    <div class="pages">
        <div data-page="projects" class="page no-toolbar no-navbar">
            <div class="page-content">

                <div class="navbarpages">
                    <div class="nav_left_logo"><a href="#" data-panel="left" class="open-panel"><img src="{{ absolute_url(asset('ressources/images/logo-02.png')) }}" alt="" title="" /></a></div>
                    <div class="nav_right_button">
                        <a href="#" data-panel="left" class="open-panel"><img src="{{ asset('ressources/images/icons/white/menu.png') }}" alt="" title="" /></a>
                        <a href="{{ path('callcenter', {'date': callcenter.date}) }}"><img src="{{ asset('ressources/images/icons/white/back.png') }}" alt="" title="" /></a>
                    </div>
                </div>
                <div id="pages_maincontent">


                    <div class="post_single">


                        <div class="page_content">
                            <div class="entry"><h2>{{ callcenter.position }}: {{ callcenter.numero }}</h2>
                                <p></p><strong><u><em>Préoccupation</em></u></strong>
                                <blockquote>
                                    {{ callcenter.preoccupation|raw }}
                                </blockquote>
                            </div>
                            <p></p><strong><u><em>Reponse</em></u></strong>
                            <blockquote>
                                {{ callcenter.solution }}
                            </blockquote>
                            <p></p><strong><u><em>Statut</em></u></strong>
                            <blockquote>
                                {% if (callcenter.statut == 0) %}
                                    Problème résolution
                                {% elseif (callcenter.statut == 1) %}
                                    A rappeler
                                {% else %}
                                    A transferer à Stéphane
                                {% endif %}
                            </blockquote>
                            <p></p><strong><u><em>Agent Call</em></u></strong>
                            <blockquote>
                                {{ callcenter.publiePar|title }}
                            </blockquote>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
